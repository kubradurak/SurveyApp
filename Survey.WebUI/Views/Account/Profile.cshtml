@model Survey.Entities.DTO.UserAndPollDTO;

@{
    ViewData["Title"] = "Profile";
}
<h3>Profiliniz</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Password)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.User.Password)
            </td>

        </tr>

    </tbody>
</table>

<a asp-action="EditProfile" asp-controller="Account" asp-route-id="@Model.User.Id" class="btn btn-secondary">Profili güncelle</a>

<h2>Oyladığınız Anketler</h2>

@foreach (var poll in Model.Polls)
{
        <partial name="_Pollinfo" model="@poll" />

}
